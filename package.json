{
  "dependencies": {
    "css-loader": "^6.2.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "file-loader": "^6.2.0",
    "path": "^0.12.7",
    "prettier": "^2.3.2",
    "sass": "^1.37.5",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.2.1",
    "webpack": "^5.50.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2"
  },
  "scripts": {
    "serve": "webpack serve",
    "prettier": "prettier --write .",
    "lint:js": "eslint --ext .js src/",
    "lint:js:fix": "lint:js -- --fix"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "arrow-body-style": [
        "error",
        "as-needed"
      ],
      "no-await-in-loop": "error",
      "no-async-promise-executor": "error",
      "no-else-return": "error",
      "no-useless-return": "error",
      "yoda": "error",
      "prettier/prettier": "error",
      "no-prototype-builtins": "off",
      "indent": "off"
    }
  }
}
